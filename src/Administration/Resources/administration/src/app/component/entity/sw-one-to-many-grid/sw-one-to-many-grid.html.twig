{% block sw_data_grid_slot_pagination %}
    <sw-pagination
        v-bind="{ page, limit, total }"
        :total-visible="7"
        @page-change="paginate">
    </sw-pagination>
{% endblock %}

{% block sw_data_grid_slot_actions %}
    <slot name="more-actions" :item="item"></slot>

    <slot name="delete-action" :item="item">
        <sw-context-menu-item @click="deleteItem(item.id)" variant="danger">
            {{ $tc('global.entity-components.deleteAction') }}
        </sw-context-menu-item>
    </slot>
{% endblock %}
