{% block sw_label %}
    <span class="sw-label"
          :class="{'is--dismiss-able': dismissAble}"
          @click.stop="$emit('selected')">
        {% block sw_label_text_holder %}
            <slot>{% block sw_label_text %}{% endblock %}</slot>
        {% endblock %}

        {% block sw_label_dismiss %}
            <button v-if="dismissAble"
                    class="sw-label__dismiss"
                    :title="$tc('global.sw-label.buttonDismiss')"
                    @click.prevent.stop="$emit('dismiss')">
                {% block sw_select_selection_dismiss_icon %}
                    <slot name="dismiss_icon">
                        <sw-icon name="small-default-x-line-medium">
                        </sw-icon>
                    </slot>
                {% endblock %}
            </button>
        {% endblock %}
    </span>
{% endblock %}