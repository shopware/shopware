{% block sw_category_leave_page_modal %}
    <sw-modal class="sw-category-leave-page-modal" :title="$tc('sw-category.general.leavePageModal.headline')"
        variant="small"
        @closeModal="onCancel">

        {% block sw_category_leave_page_modal_content %}
            {{ $tc('sw-category.general.leavePageModal.description') }}
        {% endblock %}

        <template slot="modal-footer">
            {% block sw_category_leave_page_modal_actions %}
                {% block sw_category_leave_page_modal_action_cancel %}
                    <sw-button size="small" @click="onCancel">
                        {{ $tc('sw-category.general.leavePageModal.cancelButton') }}
                    </sw-button>
                {% endblock %}

                {% block sw_category_leave_page_modal_action_confirm %}
                    <sw-button variant="primary" size="small" @click="onConfirm">
                        {{ $tc('sw-category.general.leavePageModal.confirmButton') }}
                    </sw-button>
                {% endblock %}
            {% endblock %}
        </template>
    </sw-modal>
{% endblock %}
