{% block sw_customer_base_info %}
    <sw-container class="sw-customer-base-info" columns="repeat(auto-fit, minmax(250px, 1fr)" gap="0px 30px">
        {% block sw_customer_base_info_metadata %}
            <sw-description-list>
                {% block sw_customer_base_metadata_customer_number %}
                    <dt>{{ $tc('sw-customer.baseInfo.labelCustomerNumber') }}</dt>
                    <dd>{{ customer.customerNumber }}</dd>
                {% endblock %}

                {% block sw_customer_base_metadata_customer_group %}
                    <dt>{{ $tc('sw-customer.baseInfo.labelCustomerGroup') }}</dt>
                    <dd>{{ customer.group.name }}</dd>
                {% endblock %}

                {% block sw_customer_base_metadata_birthday %}
                    <dt>{{ $tc('sw-customer.baseInfo.labelBirthday') }}</dt>
                    <dd>
                        {{ customer.birthday ? customer.birthday : $tc('sw-customer.baseInfo.emptyTextBirthday') }}
                    </dd>
                {% endblock %}

                {% block sw_customer_base_metadata_last_login %}
                    <dt>{{ $tc('sw-customer.baseInfo.labelLastLogin') }}</dt>
                    <dd>
                        {{ customer.lastLogin ? customer.lastLogin : $tc('sw-customer.baseInfo.emptyTextLogin') }}
                    </dd>
                {% endblock %}
            </sw-description-list>
            <sw-description-list>
                {% block sw_customer_base_metadata_language %}
                    <dt>{{ $tc('sw-customer.baseInfo.labelLanguage') }}</dt>
                    <dd>Deutsch</dd>
                {% endblock %}

                {% block sw_customer_base_metadata_orders %}
                    <dt>{{ $tc('sw-customer.baseInfo.labelOrders') }}</dt>
                    <dd>{{ customer.orderCustomers.length }}</dd>
                {% endblock %}

                {% block sw_customer_base_metadata_turnover %}
                    <dt>{{ $tc('sw-customer.baseInfo.labelTurnover') }}</dt>
                    <dd>0</dd>
                {% endblock %}

                {% block sw_customer_base_metadata_payment_failures %}
                    <dt>{{ $tc('sw-customer.baseInfo.labelPaymentFailures') }}</dt>
                    <dd>0</dd>
                {% endblock %}
            </sw-description-list>
        {% endblock %}
    </sw-container>
{% endblock %}
