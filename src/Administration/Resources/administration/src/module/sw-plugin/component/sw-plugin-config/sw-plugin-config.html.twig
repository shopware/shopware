{% block sw_plugin_config %}
<sw-page class="sw-plugin-config">
    {% block sw_plugin_config_header %}
        <template slot="smart-bar-header">
            <h2>{{ namespace }}</h2>
        </template>
    {% endblock %}

    {% block sw_plugin_config_actions %}
        <template slot="smart-bar-actions">
            {% block sw_plugin_config_actions_abort %}
                <sw-button :routerLink="{ name: 'sw.plugin.index' }">
                    {{ $tc('sw-plugin-config.buttonCancel') }}
                </sw-button>
            {% endblock %}

            {% block sw_plugin_config_actions_save %}
                <sw-button variant="primary" class="sw-plugin-config__save-action" @click.prevent="onSave">
                    {{ $tc('sw-plugin-config.buttonSave') }}
                </sw-button>
            {% endblock %}
        </template>
    {% endblock %}

    {% block sw_plugin_config_content %}
    <sw-card-view slot="content">
        {% block sw_system_config %}
            <sw-system-config :domain="domain"
                              ref="systemConfig">
            </sw-system-config>
        {% endblock %}
    </sw-card-view>
    {% endblock %}
</sw-page>
{% endblock %}