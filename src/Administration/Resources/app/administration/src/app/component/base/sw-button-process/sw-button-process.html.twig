{% block sw_button_process %}
    <sw-button class="sw-button-process"
            v-on="$listeners"
            v-bind="$attrs">

        <sw-icon v-if="processSuccess"
                class="sw-button-process__status-indicator"
                name="small-default-checkmark-line-medium">
        </sw-icon>
        <span class="sw-button-process__content"
            :class="contentVisibilityClass">
            <slot></slot>
        </span>
    </sw-button>
{% endblock %}
