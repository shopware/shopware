{# v-on="$listeners" needed becaues vue/compat removes them from $attrs #}
{# New mt-button component #}
<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_button %}
    <mt-button
        v-if="useMeteorComponent"
        v-bind="$attrs"
        v-on="listeners"
        @click="onClick"
    >
        <slot></slot>
    </mt-button>
{% endblock %}

