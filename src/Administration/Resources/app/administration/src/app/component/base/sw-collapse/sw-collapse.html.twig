{% block sw_collapse_panel %}
    <div class="sw-collapse">
        {% block sw_collapse_panel_header %}
            <div @click="collapseItem" class="sw-collapse__header">
                <slot name="header" v-bind="{ expanded }">{% block sw_collapse_panel_header_slot %}{% endblock %}</slot>
            </div>
        {% endblock %}

        {% block sw_collapse_panel_content %}
            <div class="sw-collapse__content" v-if="expanded">
                <slot name="content">{% block sw_collapse_panel_content_slot %}{% endblock %}</slot>
            </div>
        {% endblock %}
    </div>
{% endblock %}