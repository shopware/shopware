{# v-on="$listeners" needed becaues vue/compat removes them from $attrs #}
{# New mt-button component #}
<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_icon %}
    <mt-icon
        v-if="useMeteorComponent"
        v-bind="$attrs"
        :name="name"
        v-on="listeners"
    >
        <slot></slot>
    </mt-icon>
{% endblock %}

