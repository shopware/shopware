{% block sw_data_grid_select_item_checkbox %}
<sw-checkbox-field
    v-tooltip="getSelectableTooltip(item)"
    :disabled="!isRecordSelectable(item)"
    :value="isSelected(item[itemIdentifierProperty])"
    @update:value="selectItem($event, item)"
/>
{% endblock %}
