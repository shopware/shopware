{# v-on="$listeners" needed becaues vue/compat removes them from $attrs #}
{# New mt-colorpicker component #}
<mt-colorpicker
    v-if="useMeteorComponent"
    v-bind="$attrs"
    :model-value="currentValue"
    v-on="listeners"
    @change="currentValue = $event"
>
    <template
        v-for="(index, name) in getSlots()"
        #[name]="data"
    >
        <slot
            :name="name"
            v-bind="data"
        >
        </slot>
    </template>
    <slot></slot>
</mt-colorpicker>

