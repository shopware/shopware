{% block sw_confirm_field %}
    <div class="sw-confirm-field" :class="confirmFieldClasses">
        {% block sw_confirm_field_input_field %}
            <sw-text-field
                v-model="draft"
                v-bind="$attrs"
                :required="required"
                validation="required"
                @focus="onStartEditing"
                @blur="onBlurField"
                @keyup.enter="onSubmitFromKey"
                @keyup.esc="onCancelFromKey">
            </sw-text-field>
        {% endblock %}

        {% block sw_confirm_field_button_list %}
            <span v-show="isEditing" class="sw-confirm-field__button-list">
                {% block sw_confirm_field_cancel_button %}
                    <sw-button
                        class="sw-confirm-field__button sw-confirm-field__button--cancel"
                        square
                        size="x-small"
                        @click="onCancelSubmit"
                        tabindex="-1">

                        {% block sw_field_inline_cancel_submit_button_icon %}
                            <sw-icon small name="small-default-x-line-small"></sw-icon>
                        {% endblock %}
                    </sw-button>
                {% endblock %}

                {% block sw_confirm_field_confirm_button %}
                    <sw-button
                        class="sw-confirm-field__button sw-confirm-field__button--submit"
                        :disabled="preventEmptySubmit && !draft"
                        square
                        size="x-small"
                        variant="primary"
                        @click="onSubmitValue"
                        tabindex="-1">

                        {% block sw_field_inline_submit_button_icon %}
                            <sw-icon small name="small-default-checkmark-line-small"></sw-icon>
                        {% endblock %}
                    </sw-button>
                {% endblock %}
            </span>
        {% endblock %}
    </div>
{% endblock %}
