{% block sw_datepicker %}
    <sw-contextual-field
            class="sw-field--datepicker"
            :class="{ 'has--focus': isDatepickerOpen }"
            @sw-contextual-field-suffix-clicked="openDatepicker"
            v-bind="$attrs"
            :required="required"
            :name="formFieldName"
            @inheritance-restore="$emit('inheritance-restore', $event)"
            @inheritance-remove="$emit('inheritance-remove', $event)"
            v-on="additionalEventListeners">

        <template #sw-field-input="{ identification }">
            <input type="text"
                ref="flatpickrInput"
                :name="identification"
                :id="identification"
                :placeholder="placeholder">
                <sw-icon v-if="!required && value"
                        class="sw-field--datepicker__button-reset-value"
                        name="small-default-x-line-small"
                        @click="unsetValue"
                        small>
                </sw-icon>
        </template>

        <template #sw-contextual-field-suffix>
            <sw-icon :name="suffixName" @click.stop="openDatepicker"></sw-icon>
        </template>
    </sw-contextual-field>
{% endblock %}
