{% block sw_datepicker %}
<sw-contextual-field
    class="sw-field--datepicker"
    :class="{ 'has--focus': isDatepickerOpen }"
    v-bind="$attrs"
    :required="required"
    :name="formFieldName"
    @sw-contextual-field-suffix-clicked="openDatepicker"
    @inheritance-restore="$emit('inheritance-restore', $event)"
    @inheritance-remove="$emit('inheritance-remove', $event)"
    v-on="additionalEventListeners"
>

    <template #sw-field-input="{ identification, disabled }">
        <input
            :id="identification"
            ref="flatpickrInput"
            type="text"
            :name="identification"
            :disabled="disabled"
            :placeholder="placeholder"
        >
        <sw-icon
            v-if="!required && value && !disabled"
            class="sw-field--datepicker__button-reset-value"
            name="small-default-x-line-small"
            small
            @click="unsetValue"
        />
    </template>

    <template #sw-contextual-field-suffix>
        <sw-icon
            :name="suffixName"
            @click.stop="openDatepicker"
        />
    </template>

    <template #label>
        <slot name="label"></slot>
    </template>
</sw-contextual-field>
{% endblock %}
