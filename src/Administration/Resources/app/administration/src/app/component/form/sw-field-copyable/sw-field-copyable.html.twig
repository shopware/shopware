{% block sw_field_copyable %}
<!-- eslint-disable-next-line vuejs-accessibility/mouse-events-have-key-events -->
<sw-icon
    v-tooltip="{
        message: tooltipText,
        width: 220,
        position: 'top',
        showDelay: 300,
        hideDelay: 0
    }"
    class="sw-field-copyable"
    name="small-copy"
    @click="copyToClipboard"
    @mouseleave="resetTooltipText"
/>
{% endblock %}
