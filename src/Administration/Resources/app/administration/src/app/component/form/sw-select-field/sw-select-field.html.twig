{# v-on="$listeners" needed becaues vue/compat removes them from $attrs #}
{# New mt-select component #}
<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_select_field %}
    <mt-select
        v-if="useMeteorComponent"
        v-bind="$attrs"
        :options="options"
        v-on="listeners"
    >
        <template
            v-for="(index, name) in getSlots()"
            #[name]="data"
        >
            <slot
                :name="name"
                v-bind="data"
            >
            </slot>
        </template>
        <template #default>
            <slot></slot>
        </template>
    </mt-select>
{% endblock %}

