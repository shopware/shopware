{# Deprecated component #}
<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_switch_field_deprecated %}
    <sw-switch-field-deprecated
        v-else
        v-bind="$attrs"
        :value="value"
        v-on="listeners"
        @update:value="onChangeHandler"
    >
        <slot></slot>
    </sw-switch-field-deprecated>
{% endblock %}
