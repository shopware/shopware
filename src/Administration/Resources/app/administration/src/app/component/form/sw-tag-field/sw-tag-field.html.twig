{% block sw_tag_field %}
    <sw-select class="sw-tag-field"
                :id="entity.id"
                multi
                ref="swTagSelect"
                :label="showLabel ? $tc('global.sw-tag-field.title') : ''"
                :placeholder="disabled ? null : $tc('global.sw-tag-field.placeholder')"
                :associationStore="associationStore"
                :store="tagStore"
                :possibleMinPosition="-1"
                :highlightSearchTerm="true"
                :disabled="disabled"
                :size="size"
                @search-term-change="onSearchTermChange"
                @on-arrow-down="onArrowDown"
                @list-load="onSearchResultChange"
                @option-click="onClickAdd"
                @input="emitInput"
        >
        {% block sw_tag_field_form_select_add_option %}
            <sw-select-option  v-if="term && !recentlyAdded && !tagExists"
                                slot="sw_select_list_before"
                                :index="-1"
                                :disabled="false"
                                :item="{ index: -1 }"
                                class="sw-tag-field-add sw-select-option">
                {% block sw_tag_field_form_select_add_option_content %}
                    {{ $tc('global.sw-tag-field.listItemAdd', 0, { term: term }) }}
                {% endblock %}
            </sw-select-option>
        {% endblock %}
    </sw-select>
{% endblock %}
