{% block sw_media_modal_folder_dissolve %}
    <sw-modal variant="small"
              class="sw-media-modal-folder-dissolve"
              @modal-close="closeDissolveModal"
              :title="$tc('global.sw-media-modal-folder-dissolve.titleModal')">

        {% block sw_media_modal_folder_dissolve_body %}
            {{ $tc('global.sw-media-modal-folder-dissolve.dissolveMessage', itemsToDissolve.length, { folderName: itemsToDissolve[0].name, count: itemsToDissolve.length }) }}
        {% endblock %}

        {% block sw_media_modal_folder_dissolve_footer %}
            <template slot="modal-footer">

                {% block sw_media_modal_folder_dissolve__cancel_button %}
                    <sw-button @click="closeDissolveModal" size="small">
                        {{ $tc('global.default.cancel') }}
                    </sw-button>
                {% endblock %}

                {% block sw_media_modal_folder_dissolve_confirm_button %}
                    <sw-button class="sw-media-modal-folder-dissolve__confirm"
                               @click="dissolveSelection"
                               size="small"
                               variant="primary">
                        {{ $tc('global.sw-media-modal-folder-dissolve.buttonDissolve') }}
                    </sw-button>
                {% endblock %}

            </template>
        {% endblock %}
    </sw-modal>
{% endblock %}
