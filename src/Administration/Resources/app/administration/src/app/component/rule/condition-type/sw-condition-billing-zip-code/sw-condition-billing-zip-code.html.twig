{% block sw_condition_value_content %}
    <div class="sw-condition-billing-zip-code sw-condition__condition-value">
        {% block sw_condition_billing_zip_code_field_operator %}
            <sw-condition-operator-select v-bind="{ condition, operators }"
                                          :disabled="disabled">
            </sw-condition-operator-select>
        {% endblock %}

        {% block sw_condition_billing_zip_code_field_zip_codes %}
            <sw-tagged-field size="medium"
                             v-model="zipCodes"
                             :disabled="disabled">
            </sw-tagged-field>
        {% endblock %}
    </div>
{% endblock %}
