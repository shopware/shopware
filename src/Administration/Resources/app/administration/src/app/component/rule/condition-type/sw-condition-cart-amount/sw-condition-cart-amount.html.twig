{% block sw_condition_value_content %}
    <div class="sw-condition-cart-amount sw-condition__condition-value">
        {% block sw_condition_cart_amount_field_operator %}
            <sw-condition-operator-select v-bind="{ operators, condition }"></sw-condition-operator-select>
        {% endblock %}

        {% block sw_condition_value_content %}
            <sw-number-field
                :step="0.01"
                size="medium"
                v-model="amount">
            </sw-number-field>
        {% endblock %}
    </div>
{% endblock %}