{% block sw_condition_value_content %}
<div class="sw-condition-customer-birthday sw-condition__condition-value">
    <sw-condition-operator-select
        v-bind="{ operators, condition }"
        :disabled="disabled"
    />
    <sw-datepicker
        v-if="!isEmpty"
        v-model="birthday"
        size="medium"
        date-type="date"
        hide-hint
        required
        :disabled="disabled"
    />
</div>
{% endblock %}
