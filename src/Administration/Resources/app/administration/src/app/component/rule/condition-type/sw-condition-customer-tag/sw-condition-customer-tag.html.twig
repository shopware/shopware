<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_condition_value_content %}
<div class="sw-condition-customer-tag sw-condition__condition-value">
    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
    {% block sw_condition_tag_field_operator %}
    <sw-condition-operator-select
        v-bind="{ operators, condition }"
        :disabled="disabled"
    />
    {% endblock %}

    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
    {% block sw_condition_tag_field_tag_ids %}
    <sw-entity-tag-select
        v-if="!isEmpty"
        size="medium"
        entity="tag"
        :entity-collection="tags"
        :disabled="disabled"
        @change="setTags"
    />
    {% endblock %}
</div>
{% endblock %}
