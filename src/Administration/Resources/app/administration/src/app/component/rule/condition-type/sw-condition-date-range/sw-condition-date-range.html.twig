<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_condition_value_content %}
<div class="sw-condition-date-range sw-condition__condition-value">
    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
    {% block sw_condition_date_range_field_use_time %}
    <sw-arrow-field :disabled="disabled">
        <sw-single-select
            v-model="useTime"
            size="medium"
            :options="selectValues"
            :disabled="disabled"
            :placeholder="$tc('global.sw-condition.condition.withTime')"
            show-clearable-button
        />
    </sw-arrow-field>
    {% endblock %}

    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
    {% block sw_condition_date_range_field_from_date %}
    <sw-arrow-field :disabled="disabled">
        <sw-datepicker
            v-model="fromDate"
            size="medium"
            :date-type="isDateTime"
            required
            :disabled="disabled"
        />
    </sw-arrow-field>
    {% endblock %}

    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
    {% block sw_condiiton_date_range_field_to_date %}
    <sw-datepicker
        v-model="toDate"
        size="medium"
        :date-type="isDateTime"
        required
        :disabled="disabled"
    />
    {% endblock %}
</div>
{% endblock %}
