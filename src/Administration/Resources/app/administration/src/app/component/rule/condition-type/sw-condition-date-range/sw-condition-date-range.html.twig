{% block sw_condition_value_content %}
    <div class="sw-condition-date-range sw-condition__condition-value">
        {% block sw_condition_date_range_field_use_time %}
            <sw-arrow-field>
                <sw-single-select
                    size="medium"
                    :options="selectValues"
                    :placeholder="$tc('global.sw-condition.condition.withTime')"
                    v-model="useTime">
                </sw-single-select>
            </sw-arrow-field>
        {% endblock %}

        {% block sw_condition_date_range_field_from_date %}
            <sw-arrow-field>
                <sw-datepicker
                    size="medium"
                    :dateType="isDateTime"
                    required
                    v-model="fromDate">
                </sw-datepicker>
            </sw-arrow-field>
        {% endblock %}

        {% block sw_condiiton_date_range_field_to_date %}
            <sw-datepicker
                size="medium"
                :dateType="isDateTime"
                required
                v-model="toDate">
            </sw-datepicker>
        {% endblock %}
    </div>
{% endblock %}
