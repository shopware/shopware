{% block sw_condition_value_content %}
<div class="sw-condition-days-since-last-order sw-condition__condition-value">
    {% block sw_condition_days_since_last_order_field_operator %}
    <sw-condition-operator-select
        v-bind="{ operators, condition }"
        :disabled="disabled"
    />
    {% endblock %}

    {% block sw_condition_days_since_last_order_field_days_passed %}
    <sw-number-field
        v-if="!isEmpty"
        v-model="daysPassed"
        name="daysPassed"
        :step="1"
        size="medium"
        :disabled="disabled"
    />
    {% endblock %}
</div>
{% endblock %}
