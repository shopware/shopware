<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_condition_value_content %}
<div class="sw-condition-email sw-condition__condition-value">
    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
    {% block sw_condition_email_field_operator %}
    <sw-condition-operator-select
        v-bind="{ operators, condition }"
        :disabled="disabled"
    />
    {% endblock %}

    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
    {% block sw_condition_email_field_email %}
    <sw-text-field
        v-model="email"
        size="medium"
        :placeholder="$tc('global.sw-condition.condition.emailRule.placeholder')"
        :disabled="disabled"
    />
    {% endblock %}
</div>
{% endblock %}
