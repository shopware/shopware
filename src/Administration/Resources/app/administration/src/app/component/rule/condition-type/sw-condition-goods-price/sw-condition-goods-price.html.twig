{% block sw_condition_value_content %}
<div class="sw-condition-goods-price">
    {% block sw_condition_goods_price_field_operator %}
    <sw-condition-operator-select
        v-bind="{ operators, condition }"
        :disabled="disabled"
    />
    {% endblock %}

    {% block sw_condition_goods_price_field_amount %}
    <sw-number-field
        v-model="amount"
        size="medium"
        number-type="float"
        :min="0"
        :digits="20"
        :disabled="disabled"
    />
    {% endblock %}

    {% block sw_condition_goods_price_filter_button %}
    <div class="sw-condition-goods-price__filter">
        <sw-button
            v-tooltip="{ message: $tc('sw-settings-rule.conditionFilter.infoText') }"
            :disabled="disabled"
            @click="showFilterModal = true"
        >
            <sw-icon
                name="small-default-stack-filter"
                small
            />
        </sw-button>
    </div>
    {% endblock %}
</div>

{% block sw_condition_goods_price_condition_modal %}
<sw-condition-modal
    v-if="showFilterModal"
    :disabled="disabled"
    v-bind="{ condition, conditionDataProviderService }"
    @modal-close="showFilterModal = false"
/>
    {% endblock %}
{% endblock %}
