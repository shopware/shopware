{% block sw_condition_value_content %}
<div class="sw-condition-last-name sw-condition__condition-value">
    {% block sw_condition_last_name_field_operator %}
    <sw-condition-operator-select
        v-bind="{ operators, condition }"
        :disabled="disabled"
    />
    {% endblock %}

    {% block sw_condition_last_name_field_last_name %}
    <sw-text-field
        v-if="!isEmpty"
        v-model="lastName"
        size="medium"
        :disabled="disabled"
    />
    {% endblock %}
</div>
{% endblock %}
