<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_condition_value_content %}
<div class="sw-condition-line-item-custom-field sw-condition__condition-value">
    {# @major-deprecated tag:v6.5.0 - block will be removed #}
    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
    {% block sw_condition_line_item_custom_field_fieldset %}{% endblock %}

    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
    {% block sw_condition_line_item_custom_field_field %}
    <sw-arrow-field :disabled="disabled">
        <sw-entity-single-select
            ref="selectedField"
            v-model="selectedField"
            entity="custom_field"
            :criteria="customFieldCriteria"
            :placeholder="$tc('global.sw-condition.condition.lineItemCustomField.field.customFieldSelect.placeholder')"
            :disabled="disabled"
            size="medium"
            show-clearable-button
            @change="onFieldChange"
        >
            <template #selection-label-property="slotProps">
                {{ getInlineSnippet(slotProps.item.config.label) || slotProps.item.name }}
            </template>
            <template #result-label-property="slotProps">
                {{ getInlineSnippet(slotProps.item.config.label) || slotProps.item.name }}
            </template>
            <template #result-description-property="slotProps">
                <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                {% block sw_condition_line_item_custom_field_field_description %}
                {{ getInlineSnippet(slotProps.item.customFieldSet.config.label) || slotProps.item.customFieldSet.name }}
                {% endblock %}
            </template>
        </sw-entity-single-select>
    </sw-arrow-field>
    {% endblock %}
    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
    {% block sw_condition_line_item_custom_field_operator %}
    <sw-condition-operator-select
        v-if="renderedField"
        v-model="operator"
        v-bind="{ operators, condition }"
        :disabled="disabled"
    />
    {% endblock %}
    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
    {% block sw_condition_line_item_custom_field_value %}
    <sw-form-field-renderer
        v-if="renderedField"
        v-model="renderedFieldValue"
        :config="renderedField.config"
        :disabled="disabled"
        size="medium"
    />
    {% endblock %}
</div>
{% endblock %}
