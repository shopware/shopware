{% block sw_condition_value_content %}
<div class="sw-condition-line-item-list-price sw-condition__condition-value">
    {% block sw_condition_line_item_list_price_field_operator %}
    <sw-condition-operator-select
        v-bind="{ operators, condition }"
        :disabled="disabled"
    />
    {% endblock %}

    {% block sw_condition_line_item_list_price_field_amount %}
    <sw-number-field
        v-if="!isEmpty"
        v-model="amount"
        size="medium"
        :disabled="disabled"
        :min="0"
        :digits="20"
        number-type="float"
    />
    {% endblock %}
</div>
{% endblock %}
