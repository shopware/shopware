{% block sw_condition_value_content %}
<div class="sw-condition-line-item-of-manufacturer sw-condition__condition-value">
    {% block sw_condition_line_item_of_manufacturer_field_operator %}
    <sw-condition-operator-select
        v-bind="{ operators, condition }"
        :disabled="disabled"
    />
    {% endblock %}

    {% block sw_condition_line_item_of_manufacturer_field_identifiers %}
    <sw-entity-multi-select
        v-if="!isEmpty"
        size="medium"
        entity="manufacturer"
        :disabled="disabled"
        :entity-collection="manufacturers"
        @change="setManufacturerIds"
    />
    {% endblock %}
</div>
{% endblock %}
