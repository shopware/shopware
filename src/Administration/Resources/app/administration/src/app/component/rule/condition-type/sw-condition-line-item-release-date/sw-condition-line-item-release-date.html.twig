{% block sw_condition_value_content %}
<div class="sw-condition-line-item-release-date sw-condition__condition-value">
    {% block sw_condition_line_item_release_date_operator %}
    <sw-condition-operator-select
        v-bind="{ operators, condition }"
        :disabled="disabled"
    />
    {% endblock %}
    {% block sw_condition_line_item_release_date %}
    <sw-datepicker
        v-if="!isEmpty"
        v-model="lineItemReleaseDate"
        size="medium"
        date-type="datetime-local"
        required
        :disabled="disabled"
    />
    {% endblock %}
</div>
{% endblock %}
