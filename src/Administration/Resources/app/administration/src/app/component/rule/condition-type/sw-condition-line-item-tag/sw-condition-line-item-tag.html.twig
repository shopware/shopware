{% block sw_condition_value_content %}
<div class="sw-condition-line-item-tag sw-condition__condition-value">
    {% block sw_condition_line_item_tag_field_operator %}
    <sw-condition-operator-select
        v-bind="{ operators, condition }"
        :disabled="disabled"
    />
    {% endblock %}

    {% block sw_condition_line_item_tag_field_identifiers %}
    <sw-entity-tag-select
        v-if="!isEmpty"
        size="medium"
        entity="tag"
        :disabled="disabled"
        :entity-collection="tags"
        @change="setTags"
    />
    {% endblock %}
</div>
{% endblock %}
