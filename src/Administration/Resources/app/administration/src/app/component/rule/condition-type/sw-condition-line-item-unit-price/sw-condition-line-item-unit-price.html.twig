{% block sw_condition_value_content %}
    <div class="sw-condition-line-item-unit-price sw-condition__condition-value">
        {% block sw_condition_line_item_unit_price_field_operator %}
            <sw-condition-operator-select v-bind="{ operators, condition }"
                                          :disabled="disabled">
            </sw-condition-operator-select>
        {% endblock %}

        {% block sw_condition_line_item_unit_price_field_amount %}
            <sw-number-field
                :disabled="disabled"
                size="medium"
                :step="0.01"
                numberType="int"
                v-model="amount">
            </sw-number-field>
        {% endblock %}
    </div>
{% endblock %}
