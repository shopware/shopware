{% block sw_condition_value_content %}
    <div class="sw-condition-line-items-in-cart-count sw-condition__condition-value">
        {% block sw_condition_line_items_in_cart_count_field_operator %}
            <sw-condition-operator-select v-bind="{ operators, condition }"></sw-condition-operator-select>
        {% endblock %}

        {% block sw_condition_line_items_in_cart_count_field_count %}
            <sw-number-field size="medium" numberType="int" :step="1" v-model="count"></sw-number-field>
        {% endblock %}
    </div>
{% endblock %}
