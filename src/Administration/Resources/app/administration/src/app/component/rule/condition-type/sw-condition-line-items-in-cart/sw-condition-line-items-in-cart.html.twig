{% block sw_condition_value_content %}
    <div class="sw-condition-line-items-in-cart sw-condition__condition-value">
        {% block sw_condition_line_items_in_cart_field_operator %}
            <sw-condition-operator-select v-bind="{ operators, condition }"></sw-condition-operator-select>
        {% endblock %}

        {% block sw_condition_line_items_in_cart_field_identifiers %}
            <sw-entity-multi-select
                size="medium"
                entity="product"
                :entityCollection="products"
                @change="setProductIds">
            </sw-entity-multi-select>
        {% endblock %}
    </div>
{% endblock %}