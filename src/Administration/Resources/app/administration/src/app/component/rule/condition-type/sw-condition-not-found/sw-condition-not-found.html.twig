<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_condition_base_field_condition %}
<sw-condition-type-select
    :condition="condition"
    :disabled="disabled"
    :available-types="extendedTypes"
/>
{% endblock %}

<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_condition_value_content %}
<div class="sw-condition-not-found">
    <sw-textarea-field
        {% if VUE3 %}
        v-model:value="value"
        {% else %}
        v-model="value"
        {% endif %}
        name="sw-field--value"
        size="medium"
        :disabled="true"
    />
</div>
{% endblock %}
