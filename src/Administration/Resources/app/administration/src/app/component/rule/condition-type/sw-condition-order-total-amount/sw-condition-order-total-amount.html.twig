{% block sw_condition_value_content %}
<div class="sw-condition-order-total-amount sw-condition__condition-value">
    {% block sw_condition_order_total_amount_field_operator %}
    <sw-condition-operator-select
        v-bind="{ operators, condition }"
        :disabled="disabled"
    />
    {% endblock %}

    {% block sw_condition_order_total_amount_field_amount %}
    <sw-number-field
        v-model="amount"
        :disabled="disabled"
        size="medium"
        :min="0"
        :digits="20"
    />
    {% endblock %}
</div>
{% endblock %}
