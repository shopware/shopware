{% block sw_condition_value_content %}
<div class="sw-condition-promotion-code-of-type sw-condition__condition-value">
    {% block sw_condition_line_item_of_type_field_operator %}
    <sw-condition-operator-select
        v-bind="{ operators, condition }"
        :disabled="disabled"
    />
    {% endblock %}

    {% block sw_condition_promotion_code_of_type_field_promotion_code_type %}
    <sw-single-select
        v-model="promotionCodeType"
        size="medium"
        :disabled="disabled"
        :options="promotionCodeTypes"
        show-clearable-button
    />
    {% endblock %}
</div>
{% endblock %}
