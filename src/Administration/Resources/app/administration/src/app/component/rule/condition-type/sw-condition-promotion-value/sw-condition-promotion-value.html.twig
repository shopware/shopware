{% block sw_condition_value_content %}
<div class="sw-condition-promotion-value">
    {% block sw_condition_promotion_value_field_operator %}
    <sw-condition-operator-select
        v-bind="{ operators, condition }"
        :disabled="disabled"
    />
    {% endblock %}

    {% block sw_condition_promotion_value_field_amount %}
    <sw-number-field
        v-model="amount"
        size="medium"
        number-type="float"
        :min="0"
        :digits="20"
        :disabled="disabled"
    />
    {% endblock %}
</div>
{% endblock %}
