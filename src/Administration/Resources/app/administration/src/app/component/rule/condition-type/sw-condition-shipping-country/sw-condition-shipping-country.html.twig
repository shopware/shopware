{% block sw_condition_value_content %}
<div class="sw-condition-sales-channel sw-condition__condition-value">
    {% block sw_condition_shipping_country_field_operator %}
    <sw-condition-operator-select
        v-bind="{ operators, condition }"
        :disabled="disabled"
    />
    {% endblock %}

    {% block sw_condition_shipping_country_field_country_ids %}
    <sw-entity-multi-select
        v-if="!isEmpty"
        size="medium"
        entity="country"
        :disabled="disabled"
        :entity-collection="shippingCountries"
        @change="setCountryIds"
    />
    {% endblock %}
</div>
{% endblock %}
