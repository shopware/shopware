{% block sw_condition_base_fields %}
    {% block sw_condition_time_range_field_from_time %}
        <sw-field type="date"
                  dateType="time"
                  name="fromTime"
                  required
                  :config="datepickerConfig"
                  v-model="condition.value.fromTime"
                  class="field--main has--arrow"
                  size="medium">
        </sw-field>
    {% endblock %}
    {% block sw_condition_time_range_field_to_time %}
        <sw-field type="date"
                  dateType="time"
                  name="toTime"
                  required
                  :config="datepickerConfig"
                  v-model="condition.value.toTime"
                  class="field--main"
                  size="medium">
        </sw-field>
    {% endblock %}
{% endblock %}
