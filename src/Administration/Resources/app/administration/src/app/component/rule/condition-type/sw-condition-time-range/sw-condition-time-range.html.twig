<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_condition_value_content %}
<div class="sw-condition-time-range">
    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
    {% block sw_condition_time_range_field_from_time %}
    <sw-datepicker
        {% if VUE3 %}
        v-model:value="fromTime"
        {% else %}
        v-model="fromTime"
        {% endif %}
        size="medium"
        date-type="time"
        required
        :config="datepickerConfig"
        :disabled="disabled"
    />
    {% endblock %}

    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
    {% block sw_condition_time_range_field_to_time %}
    <sw-datepicker
        {% if VUE3 %}
        v-model:value="toTime"
        {% else %}
        v-model="toTime"
        {% endif %}
        size="medium"
        date-type="time"
        required
        :disabled="disabled"
        :config="datepickerConfig"
    />
    {% endblock %}
</div>
{% endblock %}
