{% block sw_condition_type_select %}
<sw-arrow-field
    class="sw-condition-operator-select"
    :disabled="disabled"
>
    <sw-single-select
        class="sw-condition-operator-select__select"
        size="medium"
        label-value="label"
        value-property="identifier"
        :options="translatedOperators"
        :placeholder="$tc('global.sw-condition.condition.placeholder')"
        :value="operator"
        :disabled="disabled"
        required
        @change="changeOperator"
    />
</sw-arrow-field>
{% endblock %}
