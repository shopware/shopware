{% block sw_condition_type_select %}
<sw-single-select
    class="sw-condition-operator-select sw-condition-operator-select__select"
    size="medium"
    label-value="label"
    value-property="identifier"
    :options="translatedOperators"
    :placeholder="$tc('global.sw-condition.operator.placeholder')"
    :value="operator"
    :disabled="disabled"
    required
    show-clearable-button
    {% if VUE3 %}
    @update:value="changeOperator"
    {% else %}
    @change="changeOperator"
    {% endif %}
/>
{% endblock %}
