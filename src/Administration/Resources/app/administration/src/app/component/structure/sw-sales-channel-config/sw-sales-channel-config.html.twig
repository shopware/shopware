{% block sw_sales_channel_config %}
<div
    class="sw-sales-channel-config"
    @salesChannelChanged="save"
>
    <div class="sw-sales-channel-config__global-sales-channel-switch">
        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_sales_channel_config_switch %}
        <slot
            name="select"
            v-bind="{ onInput, selectedSalesChannelId, salesChannel }"
        >
            <sw-single-select
                {% if VUE3 %}
                v-model:value="selectedSalesChannelId"
                {% else %}
                v-model="selectedSalesChannelId"
                {% endif %}
                :options="salesChannel"
                label-property="translated.name"
                value-property="id"
                show-clearable-button
                {% if VUE3 %}
                @update:value="onInput"
                {% else %}
                @change="onInput"
                {% endif %}
            />
        </slot>
        {% endblock %}
    </div>

    <slot
        name="content"
        v-bind="{ actualConfigData, allConfigs, selectedSalesChannelId }"
    ></slot>
</div>
{% endblock %}
