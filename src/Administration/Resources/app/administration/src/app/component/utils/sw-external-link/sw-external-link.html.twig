<a
    v-if="$attrs.hasOwnProperty('href')"
    v-bind="$attrs"
    target="_blank"
    class="sw-external-link"
    :class="classes"
>
    <slot></slot>
    <sw-icon
        class="sw-external-link__icon"
        :size="iconSize"
        :name="icon"
    />
</a>
<span
    v-else
    class="sw-external-link"
    :class="classes"
    @click="onClick"
>
    <slot></slot>
    <sw-icon
        class="sw-external-link__icon"
        :size="iconSize"
        :name="icon"
    />
</span>
