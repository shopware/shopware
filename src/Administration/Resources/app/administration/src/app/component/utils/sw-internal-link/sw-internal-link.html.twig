{% block sw_internal_link %}
<router-link
    v-if="!disabled"
    :to="routerLink"
    :target="target"
    class="sw-internal-link"
    :class="componentClasses"
>

    {% block sw_internal_link__slot %}
    <slot></slot>
    {% endblock %}

    {% block sw_internal_link__icon %}
    <sw-icon
        v-if="!hideIcon"
        :name="icon"
        small
    />
    {% endblock %}

</router-link>

<span
    v-else
    class="sw-internal-link sw-internal-link--disabled"
>

    {% block sw_internal_link__slot %}
    <slot></slot>
    {% endblock %}

    {% block sw_internal_link__icon %}
    <sw-icon
        v-if="!hideIcon"
        :name="icon"
        small
    />
    {% endblock %}

</span>
{% endblock %}
