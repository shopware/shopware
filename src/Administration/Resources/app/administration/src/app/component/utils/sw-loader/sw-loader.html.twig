{% block sw_loader_deprecated %}
    <sw-loader-deprecated
        v-else
        v-bind="$attrs"
        v-on="listeners"
    >
        <template
            v-for="(index, name) in getSlots()"
            #[name]="data"
        >
            <slot
                :name="name"
                v-bind="data || {}"
            >
