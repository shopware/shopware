{# New mt-popover component #}
<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_popover %}
    <mt-floating-ui
        v-if="useMeteorComponent"
        v-bind="$attrs"
        :is-opened="isOpened"
        v-on="listeners"
    >
        <template
            v-for="(index, name) in getSlots()"
            #[name]="data"
        >
            <slot
                :name="name"
                v-bind="data"
            >
            </slot>
        </template>
        <slot></slot>
    </mt-floating-ui>
{% endblock %}

