{% block sw_extension_app_module_page %}
    <sw-page class="sw-extension-app-module-page">
        <template
            v-if="!suspend"
            #smart-bar-header
        >
            <h2>{{ heading }}</h2>
        </template>

        <template #content>
            {% block sw_extension_app_module_page_content %}
                <template v-if="!suspend">
                    <iframe
                        v-show="appLoaded"
                        id="app-content"
                        class="sw-extension-app-module-page__app-content"
                        referrerpolicy="origin-when-cross-origin"
                        :src="entryPoint"
                        :title="heading"
                    ></iframe>

                    <template v-if="!appLoaded">
                        <template v-if="timedOut">
                            <sw-extension-app-module-error-page />
                        </template>

                        <template v-else>
                            <sw-loader />
                        </template>
                    </template>
                </template>
            {% endblock %}
        </template>
    </sw-page>
{% endblock %}
