<div class="sw-inactivity-login">

    <sw-modal
        v-if="lastKnownUser"
        class="sw-inactivity-login__modal"
        :title="$tc('sw-inactivity-login.modal.title')"
        :closable="false"
    >
        <sw-password-field
            v-model:value="password"
            v-autofocus
            :label="$tc('sw-login.index.labelPassword')"
            :disabled="isLoading"
            :error="passwordError"
            @keydown.enter="loginUserWithPassword"
        />

        <sw-checkbox-field
            v-model:value="rememberMe"
            :label="$tc('sw-login.index.labelKeepLoggedIn')"
        />

        <template #modal-footer>
            <a
                role="link"
                tabindex="0"
                @click="onBackToLogin"
                @keydown.enter="onBackToLogin"
            >
                {{ $tc('sw-inactivity-login.modal.actions.backToLogin') }}
            </a>

            <sw-button
                variant="primary"
                :is-loading="isLoading"
                @click="loginUserWithPassword"
            >
                {{ $tc('sw-login.index.buttonLogin') }}
            </sw-button>
        </template>
    </sw-modal>
</div>
