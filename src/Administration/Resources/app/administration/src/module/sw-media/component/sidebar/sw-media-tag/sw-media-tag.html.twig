{% block sw_media_tag %}
<div class="sw-media-tag">
    <sw-media-collapse
        :title="$tc('global.sw-tag-field.title')"
        :expand-on-loading="true"
    >
        {% block sw_media_tag_input %}
        <template slot="content">
            <sw-entity-tag-select
                v-model="media.tags"
                :disabled="disabled"
                @change="handleChange"
            />
        </template>
        {% endblock %}
    </sw-media-collapse>
</div>
{% endblock %}
