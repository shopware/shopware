{% block sw_newsletter_recipient_filter_switch %}
<div class="sw-newsletter-recipient-filter-switch">
    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
    {% block sw_newsletter_recipient_filter_switch_field %}
    <slot name="field">
        <sw-switch-field
            :name="id"
            :label="label"
            {% if VUE3 %}
            @update:value="onChange"
            {% else %}
            @change="onChange"
            {% endif %}
        />
    </slot>
    {% endblock %}
</div>
{% endblock %}
