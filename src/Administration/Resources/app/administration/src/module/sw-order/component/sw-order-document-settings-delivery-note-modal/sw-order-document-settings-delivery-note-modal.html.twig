<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_order_document_settings_modal_form_first_row %}
<sw-container
    columns="1fr 1fr 1fr"
    gap="0 14px"
>
    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
    {% block sw_order_document_settings_modal_form_document_number %}
    <sw-text-field
        v-model:value="documentConfig.documentNumber"
        :label="$tc('sw-order.documentModal.labelDeliveryNoteNumber')"
    />
    {% endblock %}

    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
    {% block sw_order_document_settings_modal_form_document_date %}
    <sw-datepicker
        v-model:value="documentConfig.documentDate"
        date-type="date"
        hide-hint
        :label="$tc('sw-order.documentModal.labelDocumentDate')"
        :placeholder="$tc('sw-datepicker.date.placeholder')"
    />
    {% endblock %}

    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
    {% block sw_order_document_settings_modal_form_document_delivery_date %}
    <sw-datepicker
        v-model:value="documentConfig.custom.deliveryDate"
        date-type="date"
        required
        hide-hint
        :label="$tc('sw-order.documentModal.labelDeliveryDate')"
        :placeholder="$tc('sw-datepicker.date.placeholder')"
    />
    {% endblock %}
</sw-container>
{% endblock %}
