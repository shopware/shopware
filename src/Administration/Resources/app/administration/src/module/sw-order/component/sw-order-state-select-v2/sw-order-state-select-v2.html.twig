{% block sw_order_state_select_v2 %}
<div class="sw-order-state-select-v2">
    {% block sw_order_state_select_v2_field %}
    <sw-single-select
        id="state"
        v-model="selectedActionName"
        :class="`${selectStyle} ${backgroundStyle}`"
        :disabled="!selectable"
        label-property="name"
        value-property="id"
        :placeholder="placeholder"
        :label="label"
        :options="transitionOptions"
        size="small"
    />
    {% endblock %}
</div>
{% endblock %}
