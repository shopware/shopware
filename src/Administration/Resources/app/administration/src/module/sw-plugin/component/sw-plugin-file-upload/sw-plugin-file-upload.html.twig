{% block sw_plugin_file_upload %}
    <div class="sw-plugin-file-upload">
        {% block sw_plugin_file_upload_content %}
            <div class="sw-plugin-file-upload__content">
                {% block sw_plugin_file_upload_button %}
                    <sw-button class="sw-plugin-file-upload__button" variant="primary" @click="onClickUpload">
                        {{ $tc('sw-plugin.fileUpload.buttonFileUpload') }}
                    </sw-button>
                {% endblock %}
                {% block sw_plugin_file_upload_form %}
                    <form class="sw-plugin-file-upload__form" ref="fileForm">
                        <input class="sw-plugin-file-upload__file-input"
                               type="file"
                               id="files"
                               ref="fileInput"
                               @change="onFileInputChange"/>
                    </form>
                {% endblock %}
            </div>
        {% endblock %}
    </div>
{% endblock %}
