<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_product_visibility_detail %}
<sw-grid
    slot="grid"
    table
    :items="items"
    :selectable="false"
>
    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
    {% block sw_product_visibility_detail_columns %}
    <template
        slot="columns"
        slot-scope="{ item }"
    >
        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_product_visibility_detail_columns_sales_channel %}
        <sw-grid-column flex="minmax(100px, auto)">
            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
            {% block sw_product_visibility_detail_columns_sales_channel_label %}
            <span
                v-if="item.salesChannelInternal"
                class="sw-select__selection-item"
            >
                {{ item.salesChannelInternal.translated.name }}
            </span>
            <span v-else>
                {{ item.salesChannel.translated.name }}
            </span>
            {% endblock %}
        </sw-grid-column>
        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_product_visibility_detail_columns_all %}
        <sw-grid-column
            flex="0.5fr"
            :label="$tc('sw-product.visibility.columnAll')"
            align="center"
        >
            <sw-field
                type="radio"
                :disabled="disabled"
                :value="item.visibility"
                :name="'visibility' + item.id"
                :options="[{ value: 30 }]"
                @change="changeVisibilityValue($event, item)"
            />
        </sw-grid-column>
        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_product_visibility_detail_columns_search_only %}
        <sw-grid-column
            flex="1fr"
            :label="$tc('sw-product.visibility.columnSearchOnly')"
            align="center"
        >
            <sw-field
                type="radio"
                :disabled="disabled"
                :value="item.visibility"
                :name="'visibility' + item.id"
                :options="[{ value: 20 }]"
                @change="changeVisibilityValue($event, item)"
            />
        </sw-grid-column>
        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_product_visibility_detail_columns_link_only %}
        <sw-grid-column
            flex="1fr"
            :label="$tc('sw-product.visibility.columnLinkOnly')"
            align="center"
        >
            <sw-field
                type="radio"
                :disabled="disabled"
                :value="item.visibility"
                :name="'visibility' + item.id"
                :options="[{ value: 10 }]"
                @change="changeVisibilityValue($event, item)"
            />
        </sw-grid-column>
        {% endblock %}
    </template>
    {% endblock %}

    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
    {% block sw_product_visibility_detail_pagination %}
    <template slot="pagination">
        <sw-pagination
            :page="page"
            :limit="limit"
            :total="total"
            :total-visible="10"
            :steps="[10]"
            @page-change="onPageChange"
        />
    </template>
    {% endblock %}
</sw-grid>
{% endblock %}
