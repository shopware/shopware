<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_promotion_detail_base %}
<div class="sw-promotion-detail-base">
    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
    {% block sw_promotion_detail_base_basic_info_card %}
    <sw-card
        position-identifier="sw-promotion-detail-base-basic-info"
        :title="$tc('sw-promotion.detail.main.general.cardTitlePromotionInfo')"
        :is-loading="!$attrs.promotion"
    >
        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_promotion_detail_base_basic_info_form %}
        <sw-promotion-basic-form :promotion="$attrs.promotion" />
        {% endblock %}
    </sw-card>
    {% endblock %}

    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
    {% block sw_promotion_detail_base_code_card %}
    <sw-card
        v-if="$attrs.promotion"
        position-identifier="sw-promotion-detail-base-code"
        :title="$tc('sw-promotion.detail.main.general.codes.card')"
    >
        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_promotion_detail_base_code_form %}
        <sw-promotion-code-form :promotion="$attrs.promotion" />
        {% endblock %}
    </sw-card>
    {% endblock %}
</div>
{% endblock %}
