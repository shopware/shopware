{% block sw_property_option_detail %}
    <sw-modal @modal-close="onCancel" :title="currentOption.name ? currentOption.name : $tc('sw-property.detail.textOptionHeadline')">
        {% block sw_property_option_detail_name %}
            <sw-field v-model="currentOption.name" type="text" validation="required" required :label="$tc('sw-property.detail.labelOptionName')" :placeholder="$tc('sw-property.detail.placeholderOptionName')" ></sw-field>
        {% endblock %}

        {% block sw_property_option_detail_position %}
            <sw-field v-model="currentOption.position" type="number" :step="1" pattern="[0-9]" :label="$tc('sw-property.detail.labelOptionPosition')" ></sw-field>
        {% endblock %}

        {% block sw_property_option_detail_color %}
            <sw-colorpicker v-model="currentOption.colorHexCode" colorOutput="hex" :label="$tc('sw-property.detail.labelOptionColor')"  :zIndex="1000"></sw-colorpicker>
        {% endblock %}

        {% block sw_property_option_detail_media %}
            <sw-upload-store-listener
                    :uploadTag="currentOption.id"
                    autoUpload
                    @media-upload-finish="successfulUpload">
            </sw-upload-store-listener>
            <sw-media-compact-upload
                    :source="currentOption.mediaId"
                    :uploadTag="currentOption.id"
                    defaultFolder="product"
                    @media-upload-remove-image="removeMedia"
                    @selection-change="setMedia">
            </sw-media-compact-upload>
        {% endblock %}

        {% block sw_property_option_detail_footer %}
            <template slot="modal-footer">
                {% block sw_property_option_detail_footer_cancel %}
                    <sw-button size="small" @click="onCancel">
                        {{ $tc('sw-property.detail.buttonCancel') }}
                    </sw-button>
                {% endblock %}

                {% block sw_property_option_detail_footer_save %}
                    <sw-button variant="primary" size="small" @click="onSave">
                        {{ $tc('sw-property.detail.buttonApply') }}
                    </sw-button>
                {% endblock %}
            </template>
        {% endblock %}
    </sw-modal>
{% endblock %}
