{% block sw_sales_channel_menu %}
    <div class="sw-sales-channel-menu">
        {% block sw_sales_channel_menu_modal %}
            <sw-sales-channel-modal v-if="showModal" @modal-close="showModal=false"></sw-sales-channel-modal>
        {% endblock %}

        {% block sw_sales_channel_menu_headline %}
            <div class="sw-admin-menu__headline">
                {% block sw_sales_channel_menu_headline_text %}
                    <div class="collapsible-text">{{ $tc('sw-sales-channel.general.titleMenuItems') }}</div>
                {% endblock %}

                {% block sw_sales_channel_menu_headline_action %}
                    <button class="sw-admin-menu__headline-action" @click="showModal=true">
                        <sw-icon class="sw-admin-menu__headline-icon"
                                 name="small-default-plus-circle"
                                 small>
                        </sw-icon>
                    </button>
                {% endblock %}
            </div>
        {% endblock %}

        {% block sw_sales_channel_menu_navigation %}
            <nav class="sw-admin-menu__navigation">

                {% block sw_sales_channel_menu_navigation_main_list %}
                    <ul class="sw-admin-menu__navigation-list">

                        {% block sw_sales_channel_menu_navigation_main_items %}
                            <sw-admin-menu-item v-for="(entry, index) in menuItems"
                                                class="sw-admin-menu__sales-channel-item"
                                                :entry="entry"
                                                :key="entry.id || entry.path"
                                                iconSize="16px"
                                                :class="['sw-admin-menu__sales-channel-item--' + index, entry.label]">
                            </sw-admin-menu-item>
                        {% endblock %}
                    </ul>
                {% endblock %}
            </nav>
        {% endblock %}
    </div>
{% endblock %}
