{% block sw_settings_units_detail %}
    <sw-page class="sw-settings-units">
        {% block sw_settings_units_detail_page %}
            <template #smart-bar-actions>

                <sw-button-process
                    class="sw-settings-units__create-action"
                    variant="primary"
                    :is-loading="isLoading"
                    :process-success="isSaveSuccessful"
                    :disabled="!acl.can('scale_unit.editor')"
                    @click="onSave"
                >
                    {{ $tc('global.default.save') }}
                </sw-button-process>

            </template>

            <template #language-switch>
                <sw-language-switch
                    :disabled="unit === null || unit.isNew()"
                    @on-change="onChangeLanguage"
                />
            </template>

            <template #content>
                <sw-card-view>
                    <sw-card
                        v-if="!isLoading"
                        position-identifier="sw-settings-units-content"
                    >
                        {% block sw_settings_units_detail_page_fields %}
                            <sw-text-field
                                v-model="unit.name"
                                :label="$tc('sw-settings-units.detail.fieldLabels.name')"
                                :error="unitNameError"
                                required
                            />

                            <sw-text-field
                                v-model="unit.shortCode"
                                :label="$tc('sw-settings-units.detail.fieldLabels.shortCode')"
                                :error="unitShortCodeError"
                                required
                            />
                        {% endblock %}
                    </sw-card>

                    <sw-skeleton v-else />
                </sw-card-view>
            </template>
        {% endblock %}
    </sw-page>
{% endblock %}
