{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "src": ["src"],
    },
    "types": [
      "vite/client",
      "@types/webpack-env",
      "jest"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noErrorTruncation": false,
  },
  "include": ["./src/**/*", "./scripts/**/*"],
  "exclude": ["node_modules"],
  "files": ["node_modules/jest-expect-message/types/index.d.ts"]
}
