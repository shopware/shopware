<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Category\Extension\CategoryPathBuilder" id="Shopware\Category\Extension\CategoryPathBuilder">
            <argument id="Shopware\Api\Category\Repository\CategoryRepository" type="service"/>
            <argument id="Doctrine\DBAL\Connection" type="service"/>
            <argument type="service" id="event_dispatcher"/>
            <tag name="kernel.event_subscriber" />
        </service>

        <service class="Shopware\Category\Command\BuildCategoryPathCommand" id="Shopware\Category\Command\BuildCategoryPathCommand">
            <argument type="service" id="Shopware\Category\Extension\CategoryPathBuilder"/>
            <tag name="console.command"/>
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
