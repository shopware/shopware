<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Shopware\Core\Content\NewsletterReceiver\NewsletterReceiverDefinition">
            <tag name="shopware.entity.definition" entity="newsletter_receiver"/>
        </service>

        <service id="Shopware\Core\Content\NewsletterReceiver\ScheduledTask\NewsletterReceiverTask">
            <tag name="shopware.scheduled.task" />
        </service>

        <service id="Shopware\Core\Content\NewsletterReceiver\ScheduledTask\NewsletterReceiverTaskHandler">
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="newsletter_receiver.repository" />
            <tag name="messenger.message_handler" />
        </service>

        <service id="Shopware\Core\Content\NewsletterReceiver\Service\NewsletterSubscriptionService">
            <argument type="service" id="newsletter_receiver.repository" />
            <argument type="service" id="Shopware\Core\Framework\Validation\DataValidator"/>
            <argument type="service" id="event_dispatcher"/>
        </service>
    </services>
</container>
