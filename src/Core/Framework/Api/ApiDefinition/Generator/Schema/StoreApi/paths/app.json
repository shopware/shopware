{
    "openapi": "3.0.0",
    "info": [],
    "paths": {
        "/app-system/{name}/generate-token": {
            "post": {
                "tags": [
                    "App system"
                ],
                "summary": "Generate JWT token for app system backend",
                "description": "Generate JWT token for authenticated communication with the app server",
                "operationId": "generateJWTAppSystemAppServer",
                "parameters": [
                    {
                        "in": "path",
                        "name": "name",
                        "required": true,
                        "description": "Name of the app",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": false,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        },
                                        "expires": {
                                            "type": "string",
                                            "format": "date-time"
                                        },
                                        "shopId": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "ApiKey": []
                    }
                ]
            }
        }
    }
