<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Shopware\Core\Framework\HealthCheck\Subscriber\HealthCheckEventSubscriber">
        </service>

        <service id="Shopware\Core\Framework\HealthCheck\EventDispatcher\HealthCheckEventDispatcher">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Shopware\Core\Framework\HealthCheck\Subscriber\HealthCheckEventSubscriber"/>
        </service>

        <!--Controller-->
        <service id="Shopware\Core\Framework\HealthCheck\Api\HealthCheckController" public="true">
            <argument type="service" id="Shopware\Core\Framework\HealthCheck\EventDispatcher\HealthCheckEventDispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <!--Command-->
        <service id="Shopware\Core\Framework\HealthCheck\Command\GetHealthCheckCommand">
            <argument type="service" id="Shopware\Core\Framework\HealthCheck\EventDispatcher\HealthCheckEventDispatcher"/>
            <tag name="console.command"/>
        </service>
    </services>
</container>
