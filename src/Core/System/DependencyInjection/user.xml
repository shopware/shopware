<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Versioning -->

        <service class="Shopware\Core\System\User\UserDefinition" id="shopware.user.user_definition" >
            <tag name="shopware.entity.definition" entity="user" />
        </service>


        <service class="Shopware\Core\System\Command\UserCreateCommand" id="Shopware\Core\System\Command\UserCreateCommand">
            <argument id="user.repository" type="service"/>
            <argument id="security.encoder_factory.generic" type="service"/>
            <tag name="console.command"/>
        </service>

    </services>
</container>                
                