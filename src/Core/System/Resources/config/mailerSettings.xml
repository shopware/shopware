<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/trunk/src/Core/System/SystemConfig/Schema/config.xsd">
    <card>
        <title>Mailer settings</title>
        <title lang="de-DE">Mailer-Einstellungen</title>

        <input-field type="single-select">
            <name>emailAgent</name>
            <options>
                <option>
                    <id>local</id>
                    <name>Local email agent</name>
                    <name lang="de-DE">Lokaler Email-Agent</name>
                </option>
                <option>
                    <id>smtp</id>
                    <name>SMTP server</name>
                    <name lang="de-DE">SMTP-Server</name>
                </option>
            </options>
            <label>Authentication</label>
            <label lang="de-DE">Authentifizierung</label>
        </input-field>

        <input-field>
            <name>host</name>
            <label>Host</label>
            <label lang="de-DE">Host</label>
            <placeholder>Fill in host name...</placeholder>
            <placeholder lang="de-DE">Host-Namen eingeben ...</placeholder>
        </input-field>

        <input-field>
            <name>port</name>
            <label>Port</label>
            <label lang="de-DE">Port</label>
            <placeholder>Fill in port number...</placeholder>
            <placeholder lang="de-DE">Port-Nummer eingeben ...</placeholder>
        </input-field>

        <input-field>
            <name>username</name>
            <label>Username</label>
            <label lang="de-DE">Benutzername</label>
            <placeholder>Fill in username...</placeholder>
            <placeholder lang="de-DE">Benutzernamen eingeben ...</placeholder>
        </input-field>

        <input-field>
            <name>password</name>
            <label>Password</label>
            <label lang="de-DE">Passwort</label>
            <placeholder>Fill in password...</placeholder>
            <placeholder lang="de-DE">Passwort eingeben ...</placeholder>
        </input-field>

        <input-field type="single-select">
            <name>encryption</name>
            <options>
                <option>
                    <id>none</id>
                    <name>No encryption</name>
                    <name lang="de-DE">Keine Verschl체sselung</name>
                </option>
                <option>
                    <id>ssl</id>
                    <name>SSL encryption</name>
                    <name lang="de-DE">SSL-Verschl체sselung</name>
                </option>
                <option>
                    <id>tsl</id>
                    <name>TLS encryption</name>
                    <name lang="de-DE">TLS-Verschl체sselung</name>
                </option>
            </options>
            <label>Encryption</label>
            <label lang="de-DE">Encryption</label>
        </input-field>

        <input-field type="single-select">
            <name>authenticationMethod</name>
            <options>
                <option>
                    <id>null</id>
                    <name>No authentication</name>
                    <name lang="de-DE">Keine Authentifizierung</name>
                </option>
                <option>
                    <id>plain</id>
                    <name>Plain authentication</name>
                    <name lang="de-DE">Einfache Authentifizierung</name>
                </option>
                <option>
                    <id>login</id>
                    <name>Login authentication</name>
                    <name lang="de-DE">Login-Authentifizierung</name>
                </option>
                <option>
                    <id>cram-md5</id>
                    <name>Cram-MD5 authentication</name>
                    <name lang="de-DE">Cram-MD5 Authentifizierung</name>
                </option>
            </options>
            <label>Authentication</label>
            <label lang="de-DE">Authentifizierung</label>
        </input-field>

        <input-field>
            <name>senderAddress</name>
            <label>Sender address</label>
            <label lang="de-DE">Absender-Adresse</label>
            <placeholder>Fill in a valid email address...</placeholder>
            <placeholder lang="de-DE">Eine valide Email-Adresse eingeben ...</placeholder>
        </input-field>

        <input-field>
            <name>deliveryAddress</name>
            <label>Delivery address</label>
            <label lang="de-DE">Delivery address</label>
            <placeholder>Fill in a valid email address...</placeholder>
            <placeholder lang="de-DE">Eine valide Email-Adresse eingeben ...</placeholder>
        </input-field>

        <input-field type="bool">
            <name>disableDelivery</name>
            <label>Disable email delivery (temporarily)</label>
            <label lang="de-DE">E-Mail-Versand (tempor채r) deaktivieren</label>
        </input-field>
    </card>
</config>
