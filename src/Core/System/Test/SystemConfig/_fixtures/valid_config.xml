<?xml version="1.0" encoding="UTF-8" ?>
<config>

    <card>
        <title>Basic configuration</title>
        <title lang="de-DE">Grundeinstellungen</title>
        <input-field>
            <name>email</name>
            <copyable>true</copyable>
            <label>eMail</label>
            <label lang="de-DE">E-Mail</label>
            <placeholder>Enter your eMail address</placeholder>
            <placeholder lang="de-DE">Bitte gib deine E-Mail Adresse ein</placeholder>
        </input-field>

        <input-field type="single-select">
            <name>mailMethod</name>
            <options>
                <option>
                    <id>smtp</id>
                    <name>SMTP</name>
                </option>
                <option>
                    <id>pop3</id>
                    <name>POP3</name>
                </option>
            </options>
            <label>Mailing protocol</label>
            <label lang="de-DE">E-Mail Versand Protokoll</label>
            <placeholder>Choose your preferred transfer method</placeholder>
            <placeholder lang="de-DE">Bitte w√§hle dein bevorzugtes Versand Protokoll</placeholder>
        </input-field>
    </card>
</config>