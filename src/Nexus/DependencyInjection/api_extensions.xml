<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Nexus\Extension\NexusExtensionRegistry" id="shopware.nexus.extension.registry">
            <argument type="collection"/>
            <argument id="shopware.extension.registry" type="service"/>
        </service>

        <service class="Shopware\Nexus\Extension\ExtensionRegistrySubscriber" id="shopware.nexus.extension.extension_registry_subscriber">
            <argument id="service_container" type="service"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>