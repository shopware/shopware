{% sw_extends '@Shopware/frontend/index/header.html.twig' %}

{# Keywords #}
{% block frontend_index_header_meta_keywords %}
    {% if navigation.activeCategory.metaKeywords %}
        {{ navigation.activeCategory.metaKeywords|escape('html') }}
    {% endif %}
{% endblock %}

{% block frontend_index_header_meta_tags_opengraph %}

    {% set description %}
        {% trans from 'frontend/listing/header' %}IndexMetaDescriptionStandard{% endtrans %}
    {% endset %}
    {% if navigation.activeCategory.cmsDescription %}
        {% set description %}
            {{ navigation.activeCategory.cmsDescription|trim|striptags|slice(0,240)|escape('html') }}
        {% endset %}
    {% elseif navigation.activeCategory.metaDescription %}
        {% set description %}
            {{ navigation.activeCategory.metaDescription|trim|striptags|escape('html') }}
        {% endset %}
    {% endif %}

    <meta property="og:type" content="product" />
    <meta property="og:site_name" content="{{ shopware.config.shopName|escape('html') }}" />
    <meta property="og:title" content="{{ navigation.activeCategory.name|escape('html') }}" />
    <meta property="og:description" content="{{ description|escape('html') }}" />

    <meta name="twitter:card" content="product" />
    <meta name="twitter:site" content="{{ shopware.config.shopName|escape('html') }}" />
    <meta name="twitter:title" content="{{ navigation.activeCategory.name|escape('html') }}" />
    <meta name="twitter:description" content="{{ description|escape('html') }}" />

    {# Images #}
    {% if navigation.activeCategory.media.fileName %}
        {% set metaImage = "{{ navigation.activeCategory.media.fileName }}" %}
    {% else %}
        {% set break = false %}
        {% for product in products if not break %}
            {% if loop.first %}
                {% set metaImage = product.image.source %}
                {% set break = true %}
            {% endif %}
        {% endfor %}
    {% endif %}

    <meta property="og:image" content="{{ metaImage }}" />
    <meta name="twitter:image" content="{{ metaImage }}" />
{% endblock %}

{# Description #}
{% block frontend_index_header_meta_description %}{% if navigation.activeCategory.metaDescription %}{{ navigation.activeCategory.metaDescription|striptags|escape }}{% else %}{% trans %}IndexMetaDescriptionStandard{% endtrans %}{% endif %}{% endblock %}

