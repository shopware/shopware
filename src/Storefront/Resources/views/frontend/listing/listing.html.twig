{# Listing wrapper #}
{% block frontend_listing_listing_wrapper %}
    {% if listing.showListing %}

        {% set listingCssClass = "listing--wrapper" %}

        {% for device in showListingDevices %}
            {% set listingCssClass = "{{ listingCssClass }} visible--{{ emotionViewports[device] }}" %}
        {% endfor %}

        {% if theme.sidebarFilter %}
            {% set listingCssClass = "{{ listingCssClass }} has--sidebar-filter" %}
        {% endif %}

        <div class="{{ listingCssClass }}">

            {# Sorting and changing layout #}
            {% block frontend_listing_top_actions %}
                {#{% sw_include '@Shopware/frontend/listing/listing_actions.html.twig' %}#}
            {% endblock %}

            {% block frontend_listing_listing_container %}
                <div class="listing--container">

                    {% block frontend_listing_no_filter_result %}
                        <div class="listing-no-filter-result">
                            {#{% sw_include "@Shopwarwe/frontend/_includes/messages.html.twig" type="info" content="{s name=noFilterResult}FÃ¼r die Filterung wurden keine Ergebnisse gefunden!{/s}" visible=false %}#}
                        </div>
                    {% endblock %}

                    {% block frontend_listing_listing_content %}
                        <div class="listing"
                             data-ajax-wishlist="true"
                             data-compare-ajax="true"
                            {% if theme.infiniteScrolling %}
                                data-infinite-scrolling="true"
                                data-loadPreviousSnippet="{% trans from 'frontend/listing/listing' %}ListingActionsLoadPrevious{% endtrans %}"
                                data-loadMoreSnippet="{% trans from 'frontend/listing/listing' %}ListingActionsLoadMore{% endtrans %}"
                                data-categoryId="{{ category.id }}"
                                data-pages="{{ pages }}"
                                data-threshold="{{ theme.infiniteThreshold }}"
                            {% endif %}>

                            {# Actual listing #}
                            {% block frontend_listing_list_inline %}
                                {% for product in listing.products %}
                                    {% sw_include "@Shopware/frontend/listing/box_product.html.twig" %}
                                {% endfor %}
                            {% endblock %}
                        </div>
                    {% endblock %}
                </div>
            {% endblock %}

            {# Paging #}
            {% block frontend_listing_bottom_paging %}
                <div class="listing--bottom-paging">
                    {#{% sw_include "@Shopware/frontend/listing/actions/action-pagination.html.twig" %}#}
                </div>
            {% endblock %}
        </div>
    {% endif %}
{% endblock %}