{% block layout_header_actions_service_menu_widget %}
    {% if page.header.serviceMenu|length > 0 %}
        <div class="top-bar-nav-item top-bar-menu">
            {% block layout_header_actions_service_menu_list %}
                <div class="service-menu dropdown">
                    <button class="btn dropdown-toggle top-bar-nav-btn"
                            type="button"
                            id="serviceMenuDropdown"
                            data-toggle="dropdown"
                            aria-haspopup="true"
                            aria-expanded="false">
                        {% sw_icon 'small-questionmark' %}
                        <span class="top-bar-nav-name">{{ "header.indexLinkService"|trans }}</span>
                    </button>
                    {% block layout_header_actions_service_menu_items %}
                        <div class="dropdown-menu dropdown-menu-right"
                             aria-labelledby="serviceMenuDropdown">
                            {% for category in page.header.serviceMenu %}
                                <a class="top-bar-list-item dropdown-item"
                                   href="{{ path('frontend.navigation.page', {'navigationId': category.id}) }}"
                                   title="Action">{{ category.translated.name }}</a>
                            {% endfor %}
                        </div>
                    {% endblock %}
                </div>
            {% endblock %}
        </div>
    {% endif %}
{% endblock %}
