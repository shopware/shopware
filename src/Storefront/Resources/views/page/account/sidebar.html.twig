{% block page_account_sidebar_inner %}
    <div class="{% if not headerWidget %}account-sidebar{% else %}header-account-menu{% endif %}">
        <div class="account-menu-inner">
			{% block page_account_sidebar_header %}
				{% if not headerWidget %}
					<div class="card-header account-sidebar-header">
						{{ "account.greetings"|trans }}{{ page.customer.firstName }}
					</div>
				{% endif %}
			{% endblock %}

			{% block page_account_sidebar_menu %}
				<div class="list-group list-group-flush">
					{% block page_account_sidebar_menu_inner %}
						{% block page_account_sidebar_link_home %}
							<a href="{{ path('frontend.account.home.page') }}"
							   title="{{ "account.overviewLink"|trans }}"
							   class="list-group-item list-group-item-action account-sidebar-item{% if controllerName is same as('AccountPage') and controllerAction is same as('index') %} active{% endif %}">
								{{ "account.overviewLink"|trans }}
							</a>
						{% endblock %}

						{% block page_account_sidebar_link_profile %}
							<a href="{{ path('frontend.account.profile.page') }}"
							   title="{{ "account.profileLink"|trans }}"
							   class="list-group-item list-group-item-action account-sidebar-item{% if controllerName is same as('AccountPage') and controllerAction is same as('profileOverview') %} active{% endif %}">
								{{ "account.profileLink"|trans }}
							</a>
						{% endblock %}

						{% block page_account_sidebar_link_address %}
							<a href="{{ path('frontend.account.address.page') }}"
							   title="{{ "account.addressLink"|trans }}"
							   class="list-group-item list-group-item-action account-sidebar-item{% if controllerName is same as('AccountPage') and controllerAction is same as('addressOverview') %} active{% endif %}">
								{{ "account.addressLink"|trans }}
							</a>
						{% endblock %}

						{% block page_account_sidebar_link_payment %}
							<a href="{{ path('frontend.account.payment.page') }}"
							   title="{{ "account.paymentLink"|trans }}"
							   class="list-group-item list-group-item-action account-sidebar-item{% if controllerName is same as('AccountPage') and controllerAction is same as('paymentOverview') %} active{% endif %}">
								{{ "account.paymentLink"|trans }}
							</a>
						{% endblock %}

						{% block page_account_sidebar_link_orders %}
							<a href="{{ path('frontend.account.order.page') }}"
							   title="{{ "account.ordersLink"|trans }}"
							   class="list-group-item list-group-item-action account-sidebar-item{% if controllerName is same as('AccountPage') and controllerAction is same as('orderOverview') %} active{% endif %}">
								{{ "account.ordersLink"|trans }}
							</a>
						{% endblock %}
					{% endblock %}
				</div>
			{% endblock %}

			{% block page_account_sidebar_footer %}
                {% if context.customer %}
					<div class="card-footer account-sidebar-footer">
						{% block page_account_sidebar_logout %}
							<form action="{{ path('storefront-api.customer.logout', {'version': 1}) }}"
								  data-logout="true"
								  data-redirect="{{ path('frontend.home.page') }}"
								  method="post">
								<button class="btn btn-link" type="submit">
									<i class="fas fa-sign-out-alt"></i>
									{{ "account.logout"|trans }}
								</button>
							</form>
						{% endblock %}
					</div>
				{% endif %}
			{% endblock %}
		</div>
	</div>
{% endblock %}
