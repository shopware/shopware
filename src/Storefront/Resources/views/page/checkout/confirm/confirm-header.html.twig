{% sw_extends '@Storefront/page/checkout/cart/cart-header.html.twig' %}

{% block page_checkout_cart_header_unit_price %}
	{# display tax instead of unit price in confirm header #}
	{% block page_checkout_cart_header_tax_price %}
		<div class="col-2 cart-header-tax-price">
			{% if page.context.taxState == "gross" %}
				{{ "checkout.cartHeaderTaxIncludeVat"|trans }}
			{% else %}
				{{ "checkout.cartHeaderTaxExcludeVat"|trans }}
			{% endif %}
		</div>
	{% endblock %}
{% endblock %}
