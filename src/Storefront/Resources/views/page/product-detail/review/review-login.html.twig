{% extends '@Storefront/component/account/login.html.twig' %}

{% block component_account_login_header %}
	<h2 class="card-title">
		{{ "detail.reviewLoginHeader"|trans }}
	</h2>
{% endblock %}

{% block component_account_login_form_description %}
	<p class="login-form-description">
		{{ "detail.reviewLoginDescription"|trans }}
		<a href="{{ path('frontend.account.login.page') }}"
		   title="{{ "detail.reviewRegisterLink"|trans }}">
            {{ "detail.reviewRegisterLink"|trans }}
		</a>
	</p>
{% endblock %}

{% block component_account_login_form_tag %}
	<form class="login-form"
		  action="{{ path('frontend.account.login') }}"
		  method="post"
		  data-form-validation="true"
		  data-form-ajax-submit="true"
		  data-form-ajax-submit-options='{
			  "replaceSelectors": ".js-review-container"
		  }'>
{% endblock %}

{% block component_account_login_form_redirect %}
	<input type="hidden"
           name="redirectTo"
           value="frontend.detail.page">

	<input type="hidden"
		   name="redirectParameters"
		   value='{"productId": "{{ productId }}"}'>
{% endblock %}

{% block component_account_login_submit %}
	<div class="float-left">
		{{ parent() }}
	</div>
	<div class="login-cancel">
		{% block page_product_detail_review_form_cancel %}
			<a href="#"
			   class="btn btn-light"
			   data-toggle="collapse"
			   data-target=".multi-collapse"
			   aria-expanded="false"
			   aria-controls="review-form review-list">
				{{ "detail.reviewLoginCancelButton"|trans }}
			</a>
		{% endblock %}
	</div>
{% endblock %}
