{# @experimental stableVersion:v6.7.0 feature:SPATIAL_BASES #}
{% block spatial_ar_qr_code_modal %}
    <div class="modal ar-qr-modal" tabindex="-1" role="dialog" aria-modal="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header p-2">
                    {# @experimental stableVersion:v6.7.0 feature:SPATIAL_BASES #}
                    {% block spatial_ar_qr_code_modal_header %}
                        <h5 class="modal-title text-center w-100">{{ 'spatial.scanQrCode'|trans|striptags }}</h5>
                        <button type="button" class="btn-close close m-1" data-bs-dismiss="modal" aria-label="Close"></button>
                    {% endblock %}
                </div>
                <div class="modal-body">
                    {# @experimental stableVersion:v6.7.0 feature:SPATIAL_BASES #}
                    {% block spatial_ar_qr_code_modal_body %}
                        <div class="text-center">
                            <span>{{ 'spatial.pointToQrCode'|trans|striptags }}</span>
                        </div>
                        <div class="text-center m-3">
                            <div class="arQRCode mx-auto" style="max-width: 256px" data-page-qrcode-generator></div>
                        </div>
                        <div class="text-center">
                            <span>{{ 'spatial.arSupportInFollowingDevices'|trans|striptags }}</span>
                            <span>{{ 'spatial.arSupportDevices'|trans|striptags }}</span>
                        </div>
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
