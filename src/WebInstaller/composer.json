{
    "name": "shopware/web-installer",
    "license": "proprietary",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "ext-dom": "*",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-iconv": "*",
        "composer/composer": "^2.4",
        "symfony/console": "6.4.*",
        "symfony/dotenv": "6.4.*",
        "symfony/framework-bundle": "6.4.*",
        "symfony/http-client": "6.4.*",
        "symfony/process": "6.4.*",
        "symfony/translation": "6.4.*",
        "symfony/twig-bundle": "6.4.*",
        "symfony/yaml": "6.4.*",
        "symfony/filesystem": "6.4.*",
        "twig/twig": "^3.4"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Shopware\\WebInstaller\\": ""
        }
    },
    "config": {
        "platform-check": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "bamarni/composer-bin-plugin": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "platform": {
            "php": "8.1.0"
        }
    },
    "scripts": {
        "build-phar": [
            "curl -qL -o box.phar https://github.com/box-project/box/releases/download/4.2.0/box.phar",
            "@php -d phar.readonly=0 box.phar compile",
            "rm box.phar"
        ],
        "test": [
            "../../vendor/bin/phpunit"
        ]
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "6.2.*"
        },
        "bamarni-bin": {
            "bin-links": true,
            "forward-command": true
        }
    }
}
