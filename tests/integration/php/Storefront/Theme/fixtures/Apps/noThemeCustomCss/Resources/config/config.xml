<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/master/src/Core/System/SystemConfig/Schema/config.xsd">

    <card>

        <title>No Theme Custom CSS App</title>

        <input-field type="bool">
            <name>noThemeCustomCssEnabled</name>
            <label>noThemeCustomCss enabled</label>
            <label lang="de-DE">noThemeCustomCss aktivieren</label>
            <defaultValue>0</defaultValue>
        </input-field>

        <input-field>
            <name>noThemeCustomCssBackGroundcolor</name>
            <label>Backgroundcolor</label>
            <label lang="de-DE">Hintergrundfarbe</label>
            <copyable>true</copyable>
            <css>no-theme-custom-css-backgroundcolor</css>
        </input-field>

        <input-field>
            <name>noThemeCustomCssFontcolor</name>
            <label>Fontcolor</label>
            <label lang="de-DE">Textfarbe</label>
            <copyable>true</copyable>
            <css>no-theme-custom-css-fontcolor</css>
            <defaultValue>#eee</defaultValue>
        </input-field>

        <input-field>
            <name>noThemeCustomCssBordercolor</name>
            <label>Bordercolor</label>
            <label lang="de-DE">Rahmenfarbe</label>
            <copyable>true</copyable>
            <css>no-theme-custom-css-bordercolor</css>
        </input-field>
    </card>

</config>