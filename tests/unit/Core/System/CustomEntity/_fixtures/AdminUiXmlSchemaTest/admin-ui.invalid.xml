    <entity name="custom_entity_complex" navigation-parent="sw-content" position="50" icon="regular-tools-alt" color="#f00">
        <listing>
            <columns>
                <column ref="custom_entity_field1"/>
                <column ref="custom_entity_field2"/>
                <column ref="custom_entity_field3"/>
                <column ref="custom_entity_field4"/>
                <column ref="custom_entity_field5"/>
                <column ref="custom_entity_field6"/>
            </columns>
        </listing>
        <detail>
            <tabs>
                <tab name="foo">
                    <card name="water">
                        <field ref="custom_entity_field1"/>
                        <field ref="custom_entity_field2"/>
                        <field ref="custom_entity_field3"/>
                    </card>
                    <card name="fire">
                        <field ref="custom_entity_field4"/>
                        <field ref="custom_entity_field5"/>
                    </card>
                </tab>
                <tab name="bar">
