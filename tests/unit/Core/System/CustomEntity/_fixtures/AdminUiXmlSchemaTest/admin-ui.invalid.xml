                    </card>
                    <card name="air">
                        <field ref="custom_entity_field2"/>
                        <field ref="custom_entity_field5"/>
                    </card>
                </tab>
            </tabs>
        </detail>
    </entity>
    <entity name="custom_entity_simple" navigation-parent="sw-content" position="50" icon="regular-tools-alt" color="#f00">
        <listing>
            <columns>
                <column ref="custom_entity_field"/>
            </columns>
        </listing>
        <detail>
            <tabs>
                <tab name="main">
                    <card name="general">
                        <ERROR ref="custom_entity_field"/>
                    </card>
                </tab>
            </tabs>
        </detail>
    </entity>
</admin-ui>
